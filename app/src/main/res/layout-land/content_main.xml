<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.duyho.firstapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Umpire Buddy"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.182" />

    <Button
        android:id="@+id/StrikeBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BallTextView"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/BallBtn"
        android:layout_toRightOf="@+id/BallBtn"
        android:text="Strike"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/BallBtn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BallTextView"
        android:layout_toLeftOf="@+id/BallTextView"
        android:layout_toStartOf="@+id/BallTextView"
        android:text="Ball"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/BallTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Ball: 0"
        android:textSize="30dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/StrikeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Strike: 0"
        android:textSize="30dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/OutTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/StrikeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Total Outs: 0"
        android:textSize="35dp"
        android:visibility="visible" />

</RelativeLayout>
